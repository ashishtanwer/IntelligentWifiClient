<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Acceleraion"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/acceleraionDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wifiacceleraionDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp" />

        <Spinner
        android:id="@+id/pickaccelerationwifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
    
        <Button
        android:id="@+id/submitacceleraionrule"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:text="Add Acceleraion Rule"
        android:textSize="24sp" />

</LinearLayout>